function compare(typ1,typ2){
    
    if (typeof typ1 === typeof typ2) {
    console.log(" they are the sametype");

}
else {
    console.log("they are not the same type");

}
}
compare(a,b);
compare(myvari,f);
compare(a,f);
compare(myvari,b);

